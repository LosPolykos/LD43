{
  "name": "server",
  "description": "The Ego Game server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run tsc && concurrently --kill-others \"tsc -w \" \"nodemon -r ./out/bootstrap.js out/app/www.js --ignore generation/ \" ",
    "debug": "node --inspect-brk=4758 -r ./out/bootstrap.js out/app/www.js",
    "lint": "tslint --project tsconfig.json \"./app/**/*.ts\" --format stylish",
    "test": "mocha -r ts-node/register -r ./bootstrap.ts **/app/**/*.spec.ts --exit",
    "tsc": "tsc && copyfiles \"tsconfig.json\" \"out\" && mkdirp generation/",
    "coverage": "nyc mocha -r ts-node/register -r ./bootstrap.ts **/app/**/*.spec.ts --exit",
    "tsc:w": "copyfiles \"tsconfig.json\" \"out\" && tsc -w",
    "clean": "rimraf out node_modules",
    "ci-lint": "npm run prettify && tslint --config tslint.json --project tsconfig.json",
    "prettify": "prettier --config ../.prettierrc.toml --write **/app/**/*.ts",
    "postinstall": "rimraf false"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/app/www.ts",
      "**/*.config.ts",
      "**/*.spec.ts",
      "**/repositories/interfaces/*",
      "**/models/db/*"
    ],
    "include": [
      "**/app/**/*.ts"
    ],
    "all": true
  },
  "dependencies": {
    "@types/bson": "^1.0.11",
    "@types/mongodb": "^3.1.14",
    "@types/mongoose": "^5.3.1",
    "@types/sinon": "5.0.5",
    "@types/socket.io-client": "^1.4.32",
    "atob": "^2.1.2",
    "body-parser": "~1.17.0",
    "bson-objectid": "^1.2.4",
    "child_process": "^1.0.2",
    "cookie-parser": "~1.4.0",
    "cors": "~2.8.1",
    "debug": "~2.2.0",
    "express": "~4.16.0",
    "guid-typescript": "1.0.7",
    "inversify": "^4.13.0",
    "mongodb": "^3.1.8",
    "mongoose": "^5.3.9",
    "morgan": "1.7.0",
    "nodemon": "1.18.4",
    "prettier": "^1.14.3",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.3.3",
    "serve-favicon": "~2.3.0",
    "sinon": "7.1.1",
    "socket.io": "1.4.5",
    "socket.io-client": "^2.1.1",
    "systemjs": "0.21.4",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "typemoq": "^2.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/chai": "~4.1.4",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/express-serve-static-core": "4.16.0",
    "@types/mocha": "5.2.5",
    "@types/morgan": "~1.7.35",
    "@types/node": "~10.9.4",
    "@types/node-uuid": "0.0.28",
    "@types/socket.io": "1.4.38",
    "chai": "~4.1.0",
    "concurrently": "^4.0.1",
    "copyfiles": "^2.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "~5.2.0",
    "mock-express-request": "^0.2.2",
    "nyc": "^13.1.0",
    "rimraf": "2.6.2",
    "source-map-support": "^0.5.9",
    "tslint": "~5.9.1",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "5.2.0",
    "typescript": "~2.9.2"
  }
}
