{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceRoot": ".",
        "sourceMap": true,
        "outDir": "out",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "paths": {
            "@root/*": ["./src/*"]
        }
    }
}
